<div class="modal fade" id="<%= popupid %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-md-8">
            <iframe scrolling="no" src="<%= iframe %>"></iframe>
          </div>
          <div class="col-md-4">
            <img width="100%" src="<%= imagelink %>">
          </div>
	  <div class="move"><img src="panandzoom.png" height=50px width=50px></div>
	  <div class="addCart" onClick="addCart()"></div>
	  <div class="exit" onClick="exitPopup(<%= popupid %>)"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>

function exitPopup(id) {
	$(id).modal('hide');
	
}
</script>

